<p id="notice"><%= notice %></p>

<div id="itemsContainer">
  
  
  <h1>Items</h1>
  
   <% if @items.length == 0 %>
   <h2>This Category is Empty</h2>
   <% end %>


    <% @items.each do |item| %>
    <div class="itemhols">
    <h2><%= item.title %></h2>
      <%= link_to (image_tag item.image_url, :class => "itemholsIm"), item %>
      <p><span class="priceStyle">Price: <%= number_to_currency(item.price, :unit => "â‚¬") %></span>
      <br>
        Color:<%= item.color %>
        <br>
        Category: <%= item.category %>
        <br>
        Brand: <%= item.brand %>
        <br>
        <%= item.description %></p>
        <p>
        
        <%= link_to 'Show', item, :class => "button", :role => "button" %>
        <a href="/cart/<%= item.id %>" class="button">Add Me to Cart</a>
        
        <% if session[:login] == 1 %>
          <%= link_to 'Edit',  edit_item_path(item), :class => "button", :role => "button" %>
          <%= link_to 'Destroy',  item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :role => "button" %>
       <% end %>
        </p>
     </div>
    <% end %>
 
</div>
